{
  "name": "citz-sbc-queue",
  "version": "0.1.0",
  "private": true,
  "description": "Service BC Queue Management System",
  "author": "CITZ Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "playwright install",
    "clean": "rm -rf .next out build dist coverage test-results playwright-report",
    "postinstall": "playwright install-deps",
    "check-licenses": "node scripts/check-licenses.js",
    "check-licenses:ci": "node scripts/check-licenses.js && node scripts/validate-licenses.js"
  },
  "dependencies": {
    "@bcgov/bc-sans": "2.1.0",
    "@bcgov/citz-imb-sso-js-core": "1.0.1-beta",
    "@headlessui/react": "2.2.7",
    "@tailwindcss/postcss": "4.1.11",
    "next": "15.4.5",
    "postcss": "8.5.2",
    "qs": "6.14.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "typescript": "5.9.2",
    "zod": "4.0.14",
    "zustand": "5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@playwright/test": "1.54.1",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/typography": "0.5.15",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "24.1.0",
    "@types/qs": "6.14.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "jsdom": "26.0.0",
    "license-checker": "25.0.1",
    "tailwindcss": "4.1.11",
    "vitest": "3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
