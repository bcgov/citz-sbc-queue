model StaffUser {
  guid                 String    @id @default(uuid()) // IDIR user guid
  sub                  String    @unique @db.VarChar(150) // IDIR user sub
  legacyCsrId          Int?      @unique @map("legacy_csr_id") // public.csr.csr_id
  username             String    @unique @db.VarChar(150) // IDIR username
  displayName          String    @db.VarChar(250) @map("display_name") // IDIR display name

  officeId             Int?       @map("office_id")
  counterId            Int?      @map("counter_id")
  role                 Role
  isActive             Boolean   @default(false) @map("is_active")

  deletedAt            DateTime? @db.Timestamp(6) @map("deleted_at")
  createdAt            DateTime  @default(now()) @db.Timestamp(6) @map("created_at")
  updatedAt            DateTime  @updatedAt @db.Timestamp(6) @map("updated_at")

  isReceptionist       Boolean   @default(false) @map("is_receptionist")
  isOfficeManager      Boolean   @default(false) @map("is_office_manager")
  isPesticideDesignate Boolean   @default(false) @map("is_pesticide_designate")
  isFinanceDesignate   Boolean   @default(false) @map("is_finance_designate")
  isIta2Designate      Boolean   @default(false) @map("is_ita2_designate")

  @@map("staff_user")
  @@schema("app")
}
